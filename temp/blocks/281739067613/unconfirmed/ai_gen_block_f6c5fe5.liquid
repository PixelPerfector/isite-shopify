{% doc %}
  @prompt
    a section that tells in 3 cards why choose us for making your website
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-why-choose-us-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-why-choose-us__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-why-choose-us__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-why-choose-us__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-why-choose-us__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-why-choose-us__cards-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-why-choose-us__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    text-align: center;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-why-choose-us__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 8 }}px {{ block.settings.card_shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.5 }});
  }

  .ai-why-choose-us__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: 50%;
  }

  .ai-why-choose-us__icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
    color: {{ block.settings.icon_color }};
  }

  .ai-why-choose-us__card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-why-choose-us__card-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_text_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-why-choose-us__cards-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-why-choose-us__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-why-choose-us__cards-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-why-choose-us__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.75);
    }

    .ai-why-choose-us-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 16px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-why-choose-us-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-why-choose-us__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-why-choose-us__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-why-choose-us__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-why-choose-us__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-why-choose-us__cards-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign card_title_key = 'card_' | append: i | append: '_title'
          assign card_text_key = 'card_' | append: i | append: '_text'
          assign card_icon_key = 'card_' | append: i | append: '_icon'
          
          assign card_title = block.settings[card_title_key]
          assign card_text = block.settings[card_text_key]
          assign card_icon = block.settings[card_icon_key]
        %}

        <div class="ai-why-choose-us__card-{{ ai_gen_id }}">
          <div class="ai-why-choose-us__icon-wrapper-{{ ai_gen_id }}">
            {% if card_icon == 'speed' %}
