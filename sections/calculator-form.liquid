{{ 'section-calculator.css' | asset_url | stylesheet_tag }}

<div class="calculator-section color-{{ section.settings.color_scheme }} gradient">
  <div class="calculator__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="calculator__header">
        <h1 class="calculator__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h1>
        {%- if section.settings.subheading != blank -%}
          <p class="calculator__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <price-calculator
      class="calculator"
      data-price-landing="{{ settings.calc_price_landing | default: 500 }}"
      data-price-presentation="{{ settings.calc_price_presentation | default: 1000 }}"
      data-price-ecommerce="{{ settings.calc_price_ecommerce | default: 2500 }}"
      data-price-custom="{{ settings.calc_price_custom | default: 5000 }}"
      data-price-per-page="{{ settings.calc_price_per_page | default: 100 }}"
      data-design-basic="{{ settings.calc_design_basic_mult | default: '1' }}"
      data-design-premium="{{ settings.calc_design_premium_mult | default: '1.5' }}"
      data-design-custom="{{ settings.calc_design_custom_mult | default: '2' }}"
    >
      {%- comment -%} Progress Bar {%- endcomment -%}
      <div class="calc-progress">
        <div class="calc-progress__track">
          <div class="calc-progress__fill" style="width: 0%"></div>
        </div>
        <div class="calc-progress__step calc-progress__step--active calc-progress__step--current">1</div>
        <div class="calc-progress__step">2</div>
        <div class="calc-progress__step">3</div>
        <div class="calc-progress__step">4</div>
      </div>

      <form class="calc-form" novalidate>
        {%- comment -%} Step 1: Type of Site {%- endcomment -%}
        <div class="calc-step calc-step--active" data-step="1">
          <h2 class="calc-step__title">{{ section.settings.step1_title | default: 'Ce tip de site ai nevoie?' }}</h2>

          <div class="calc-options">
            <div class="calc-option" data-field="type" data-value="landing">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <line x1="3" y1="9" x2="21" y2="9"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Landing Page</h3>
              <p class="calc-option__desc">O pagina simpla</p>
            </div>

            <div class="calc-option" data-field="type" data-value="presentation">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                  <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Prezentare</h3>
              <p class="calc-option__desc">Multi-pagina</p>
            </div>

            <div class="calc-option" data-field="type" data-value="ecommerce">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="9" cy="21" r="1"/>
                  <circle cx="20" cy="21" r="1"/>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                </svg>
              </div>
              <h3 class="calc-option__title">E-commerce</h3>
              <p class="calc-option__desc">Magazin online</p>
            </div>

            <div class="calc-option" data-field="type" data-value="custom">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="16 18 22 12 16 6"/>
                  <polyline points="8 6 2 12 8 18"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Custom</h3>
              <p class="calc-option__desc">Aplicatie web</p>
            </div>
          </div>
        </div>

        {%- comment -%} Step 2: Number of Pages {%- endcomment -%}
        <div class="calc-step" data-step="2">
          <h2 class="calc-step__title">{{ section.settings.step2_title | default: 'Cate pagini va avea site-ul?' }}</h2>

          <div class="calc-pages">
            <div class="calc-pages__input-wrapper">
              <button type="button" class="calc-pages__btn" onclick="this.parentElement.querySelector('input').stepDown(); this.parentElement.querySelector('input').dispatchEvent(new Event('input'))">-</button>
              <input
                type="number"
                name="pages"
                class="calc-pages__input"
                value="5"
                min="1"
                max="100"
              >
              <button type="button" class="calc-pages__btn" onclick="this.parentElement.querySelector('input').stepUp(); this.parentElement.querySelector('input').dispatchEvent(new Event('input'))">+</button>
            </div>
            <p class="calc-pages__label">{{ section.settings.step2_note | default: 'Primele 5 pagini sunt incluse in pretul de baza' }}</p>
          </div>
        </div>

        {%- comment -%} Step 3: Design Preference {%- endcomment -%}
        <div class="calc-step" data-step="3">
          <h2 class="calc-step__title">{{ section.settings.step3_title | default: 'Ce nivel de design preferi?' }}</h2>

          <div class="calc-options">
            <div class="calc-option" data-field="design" data-value="basic">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Basic</h3>
              <p class="calc-option__desc">Template standard</p>
            </div>

            <div class="calc-option" data-field="design" data-value="premium">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Premium</h3>
              <p class="calc-option__desc">Design personalizat</p>
            </div>

            <div class="calc-option" data-field="design" data-value="custom">
              <div class="calc-option__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 3l1.912 5.813a2 2 0 0 0 1.275 1.275L21 12l-5.813 1.912a2 2 0 0 0-1.275 1.275L12 21l-1.912-5.813a2 2 0 0 0-1.275-1.275L3 12l5.813-1.912a2 2 0 0 0 1.275-1.275L12 3z"/>
                </svg>
              </div>
              <h3 class="calc-option__title">Custom</h3>
              <p class="calc-option__desc">Design unic 100%</p>
            </div>
          </div>
        </div>

        {%- comment -%} Step 4: Contact Details {%- endcomment -%}
        <div class="calc-step" data-step="4">
          <h2 class="calc-step__title">{{ section.settings.step4_title | default: 'Datele tale de contact' }}</h2>

          <div class="calc-contact">
            <div class="calc-contact__field">
              <label class="calc-contact__label" for="calc-name">
                Nume <span>*</span>
              </label>
              <input
                type="text"
                id="calc-name"
                name="name"
                class="calc-contact__input"
                placeholder="Numele tau"
                required
              >
            </div>

            <div class="calc-contact__field">
              <label class="calc-contact__label" for="calc-phone">
                Telefon <span>*</span>
              </label>
              <input
                type="tel"
                id="calc-phone"
                name="phone"
                class="calc-contact__input"
                placeholder="07XX XXX XXX"
                required
              >
            </div>

            <div class="calc-contact__field">
              <label class="calc-contact__label" for="calc-email">
                Email (optional)
              </label>
              <input
                type="email"
                id="calc-email"
                name="email"
                class="calc-contact__input"
                placeholder="email@exemplu.ro"
              >
            </div>
          </div>
        </div>

        {%- comment -%} Navigation {%- endcomment -%}
        <div class="calc-nav">
          <button type="button" class="calc-nav__btn calc-nav__btn--prev" data-calc-prev style="visibility: hidden;">
            Inapoi
          </button>
          <button type="button" class="calc-nav__btn calc-nav__btn--next" data-calc-next disabled>
            Continua
          </button>
        </div>
      </form>
    </price-calculator>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<script src="{{ 'calculator.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Price calculator",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Calculeaza pretul site-ului tau"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h1"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Raspunde la cateva intrebari simple si primeste o estimare de pret instant"
    },
    {
      "type": "header",
      "content": "Step titles"
    },
    {
      "type": "text",
      "id": "step1_title",
      "label": "Step 1 title",
      "default": "Ce tip de site ai nevoie?"
    },
    {
      "type": "text",
      "id": "step2_title",
      "label": "Step 2 title",
      "default": "Cate pagini va avea site-ul?"
    },
    {
      "type": "text",
      "id": "step2_note",
      "label": "Step 2 note",
      "default": "Primele 5 pagini sunt incluse in pretul de baza"
    },
    {
      "type": "text",
      "id": "step3_title",
      "label": "Step 3 title",
      "default": "Ce nivel de design preferi?"
    },
    {
      "type": "text",
      "id": "step4_title",
      "label": "Step 4 title",
      "default": "Datele tale de contact"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Price calculator"
    }
  ]
}
{% endschema %}
