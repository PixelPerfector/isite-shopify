{{ 'section-proposal.css' | asset_url | stylesheet_tag }}

<div class="proposal-section color-{{ section.settings.color_scheme }} gradient">
  <div class="proposal__container page-width section-{{ section.id }}-padding">
    <div id="proposal-content">
      {%- comment -%} Content will be populated by JavaScript {%- endcomment -%}
      <noscript>
        <div class="proposal__empty">
          <svg class="proposal__empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
          <h2 class="proposal__empty-title">JavaScript necesar</h2>
          <p class="proposal__empty-text">Te rugam sa activezi JavaScript pentru a vedea oferta.</p>
        </div>
      </noscript>
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('proposal-content');
    const params = new URLSearchParams(window.location.search);

    const name = params.get('name');
    const phone = params.get('phone');
    const email = params.get('email');
    const type = params.get('type');
    const typeName = params.get('typeName') || type;
    const pages = params.get('pages');
    const design = params.get('design');
    const designName = params.get('designName') || design;
    const priceMin = params.get('priceMin');
    const priceMax = params.get('priceMax');

    const whatsappNumber = {{ settings.whatsapp_number | default: '+40700000000' | json }};
    const calculatorUrl = '/pages/calculator';

    // Check if we have valid data
    if (!name || !priceMin || !priceMax) {
      container.innerHTML = `
        <div class="proposal__empty">
          <svg class="proposal__empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="8" x2="12" y2="12"/>
            <line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
          <h2 class="proposal__empty-title">{{ section.settings.empty_title | default: 'Nu am gasit datele' }}</h2>
          <p class="proposal__empty-text">{{ section.settings.empty_text | default: 'Foloseste calculatorul pentru a primi o estimare de pret.' }}</p>
          <a href="${calculatorUrl}" class="button button--primary">
            {{ section.settings.empty_button | default: 'Calculeaza Pret' }}
          </a>
        </div>
      `;
      return;
    }

    // WhatsApp message
    const whatsappMessage = encodeURIComponent(
      `Salut! Am folosit calculatorul de preturi si sunt interesat de un ${typeName} cu ${pages} pagini si design ${designName}. Estimarea a fost ${priceMin}-${priceMax} EUR. Ma puteti contacta?`
    );
    const whatsappUrl = `https://wa.me/${whatsappNumber.replace(/[^0-9+]/g, '')}?text=${whatsappMessage}`;

    container.innerHTML = `
      <div class="proposal__icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
      </div>

      <h1 class="proposal__greeting">{{ section.settings.greeting_prefix | default: 'Salut' }}, ${name}!</h1>
      <p class="proposal__intro">{{ section.settings.intro_text | default: 'Pe baza informatiilor furnizate, iata estimarea ta de pret:' }}</p>

      <div class="proposal__card">
        <div class="proposal__summary">
          <div class="proposal__summary-item">
            <span class="proposal__summary-label">Tip site</span>
            <span class="proposal__summary-value">${typeName}</span>
          </div>
          <div class="proposal__summary-item">
            <span class="proposal__summary-label">Numar pagini</span>
            <span class="proposal__summary-value">${pages}</span>
          </div>
          <div class="proposal__summary-item">
            <span class="proposal__summary-label">Nivel design</span>
            <span class="proposal__summary-value">${designName}</span>
          </div>
        </div>

        <div class="proposal__price-section">
          <p class="proposal__price-label">{{ section.settings.price_label | default: 'Estimare pret' }}</p>
          <p class="proposal__price">${priceMin} - ${priceMax} EUR</p>
          <p class="proposal__price-note">{{ section.settings.price_note | default: '* Pretul final va fi stabilit dupa discutia initiala' }}</p>
        </div>
      </div>

      <div class="proposal__message">
        <div class="proposal__message-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <h3 class="proposal__message-title">{{ section.settings.message_title | default: 'Te vom contacta in curand!' }}</h3>
        <p class="proposal__message-text">{{ section.settings.message_text | default: 'Unul dintre consultantii nostri te va suna in maxim 24 de ore pentru a discuta detaliile proiectului tau.' }}</p>
      </div>

      <div class="proposal__actions">
        <a href="${whatsappUrl}" class="proposal__whatsapp" target="_blank" rel="noopener noreferrer">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          {{ section.settings.whatsapp_label | default: 'Scrie pe WhatsApp' }}
        </a>
        <a href="${calculatorUrl}" class="proposal__back">
          {{ section.settings.back_label | default: 'Recalculeaza' }}
        </a>
      </div>

      <p class="proposal__disclaimer">{{ section.settings.disclaimer | default: 'Aceasta estimare este orientativa. Pretul final va fi confirmat dupa analiza cerintelor tale specifice.' }}</p>
    `;
  });
</script>

