<div class="why-us color-{{ section.settings.color_scheme }} gradient">
  <div class="why-us__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="why-us__header">
        <h2 class="why-us__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="why-us__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- SVG Gradient Definitions -->
    <svg width="0" height="0" style="position:absolute">
      <defs>
        <linearGradient id="grad-blue" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#3b82f6"/>
          <stop offset="100%" style="stop-color:#8b5cf6"/>
        </linearGradient>
        <linearGradient id="grad-green" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#10b981"/>
          <stop offset="100%" style="stop-color:#059669"/>
        </linearGradient>
        <linearGradient id="grad-gold" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#f59e0b"/>
          <stop offset="100%" style="stop-color:#d97706"/>
        </linearGradient>
      </defs>
    </svg>

    <div class="why-us__grid why-us__grid--{{ section.blocks.size }}">
      {%- for block in section.blocks -%}
        <div class="why-us__card" {{ block.shopify_attributes }}>
          <div class="why-us__icon why-us__icon--{{ block.settings.icon_color }}">
            {%- case block.settings.icon_type -%}
              {%- when 'rocket' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M12.5 2.1c-.3-.1-.5-.1-.8 0C8.3 3.4 5 7.5 5 12c0 1.8.5 3.5 1.3 5l-1.6 1.6c-.4.4-.4 1 0 1.4.2.2.4.3.7.3.3 0 .5-.1.7-.3L7.7 18c1.4.9 3.1 1.5 4.8 1.5s3.4-.6 4.8-1.5l1.6 1.6c.2.2.4.3.7.3.3 0 .5-.1.7-.3.4-.4.4-1 0-1.4L18.7 17c.8-1.5 1.3-3.2 1.3-5 0-4.5-3.3-8.6-6.7-9.9zM12 17.5c-3 0-5.5-2.5-5.5-5.5 0-3.5 2.7-6.8 5.5-8 2.8 1.2 5.5 4.5 5.5 8 0 3-2.5 5.5-5.5 5.5z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
              {%- when 'shield' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                </svg>
              {%- when 'trophy' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M19 5h-2V3H7v2H5c-1.1 0-2 .9-2 2v1c0 2.55 1.92 4.63 4.39 4.94.63 1.5 1.98 2.63 3.61 2.96V19H7v2h10v-2h-4v-3.1c1.63-.33 2.98-1.46 3.61-2.96C19.08 12.63 21 10.55 21 8V7c0-1.1-.9-2-2-2zM5 8V7h2v3.82C5.84 10.4 5 9.3 5 8zm14 0c0 1.3-.84 2.4-2 2.82V7h2v1z"/>
                </svg>
              {%- when 'star' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              {%- when 'check' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="url(#grad-{{ block.settings.icon_color }})">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
            {%- endcase -%}
          </div>

          <div class="why-us__number-wrapper">
            <span class="why-us__number why-us__number--{{ block.settings.icon_color }}">{{ block.settings.number }}</span>
            {%- if block.settings.unit != blank -%}
              <span class="why-us__unit">{{ block.settings.unit }}</span>
            {%- endif -%}
          </div>

          {%- if block.settings.tagline != blank -%}
            <p class="why-us__tagline">{{ block.settings.tagline }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% stylesheet %}
  .why-us__header {
    text-align: center;
    max-width: 80rem;
    margin: 0 auto 3rem;
  }

  .why-us__heading {
    margin: 0 0 0.5rem;
  }

  .why-us__subheading {
    margin: 0;
    opacity: 0.7;
    font-size: 1.1rem;
  }

  .why-us__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .why-us__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .why-us__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .why-us__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .why-us__card {
    padding: 2rem 1.5rem;
    text-align: center;
    border-radius: 16px;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.08);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .why-us__card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .why-us__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    margin: 0 auto 1.25rem;
    border-radius: 50%;
    transition: transform 0.3s ease;
  }

  .why-us__card:hover .why-us__icon {
    transform: scale(1.1);
  }

  .why-us__icon--blue {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
  }

  .why-us__icon--green {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);
  }

  .why-us__icon--gold {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(217, 119, 6, 0.15) 100%);
  }

  .why-us__number-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .why-us__number {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.02em;
  }

  @media screen and (min-width: 750px) {
    .why-us__number {
      font-size: 3.5rem;
    }
  }

  .why-us__number--blue {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .why-us__number--green {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .why-us__number--gold {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .why-us__unit {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
    margin-top: 0.25rem;
  }

  .why-us__tagline {
    margin: 0;
    font-size: 0.95rem;
    opacity: 0.65;
    line-height: 1.4;
  }
{% endstylesheet %}

