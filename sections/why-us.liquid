<div class="why-us color-{{ section.settings.color_scheme }} gradient">
  <div class="why-us__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="why-us__header">
        <h2 class="why-us__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="why-us__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="why-us__grid why-us__grid--{{ section.settings.columns_desktop }}">
      {%- for block in section.blocks -%}
        <div class="why-us__card" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="why-us__icon">
              {{- block.settings.icon | image_url: width: 120 | image_tag: class: 'why-us__icon-image' -}}
            </div>
          {%- else -%}
            <div class="why-us__icon why-us__icon--default">
              {%- case block.settings.icon_name -%}
                {%- when 'quality' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                {%- when 'stability' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
                {%- when 'support' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
                {%- when 'speed' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
                {%- when 'security' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                {%- when 'custom' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3h7a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-7m0-18H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h7m0-18v18"/></svg>
                {%- else -%}
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              {%- endcase -%}
            </div>
          {%- endif -%}

          {%- if block.settings.title != blank -%}
            <h3 class="why-us__title h4">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <p class="why-us__description">{{ block.settings.description }}</p>
          {%- endif -%}

          {%- if block.settings.highlight != blank -%}
            <span class="why-us__highlight">{{ block.settings.highlight }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% stylesheet %}
  .why-us__header {
    text-align: center;
    max-width: 80rem;
    margin: 0 auto 3rem;
  }

  .why-us__heading {
    margin: 0 0 1rem;
  }

  .why-us__subheading {
    margin: 0;
    opacity: 0.8;
  }

  .why-us__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .why-us__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .why-us__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .why-us__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .why-us__card {
    padding: 2rem;
    text-align: center;
    border-radius: 12px;
    background: rgba(var(--color-foreground), 0.02);
    border: 1px solid rgba(var(--color-foreground), 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .why-us__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(var(--color-foreground), 0.08);
  }

  .why-us__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(var(--color-foreground), 0.05) 0%, rgba(var(--color-foreground), 0.1) 100%);
  }

  .why-us__icon--default svg {
    color: rgb(var(--color-foreground));
  }

  .why-us__icon-image {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .why-us__title {
    margin: 0 0 0.75rem;
  }

  .why-us__description {
    margin: 0 0 1rem;
    font-size: 0.95rem;
    opacity: 0.75;
    line-height: 1.6;
  }

  .why-us__highlight {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 600;
    padding: 0.35rem 0.75rem;
    background: rgba(var(--color-button), 0.1);
    color: rgb(var(--color-button));
    border-radius: 20px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Why us",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "De ce sa ne alegi pe noi?"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Avantajele de a lucra cu Perlog Software"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
