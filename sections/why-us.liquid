<div class="why-us color-{{ section.settings.color_scheme }} gradient">
  <div class="why-us__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="why-us__header">
        <h2 class="why-us__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="why-us__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="why-us__grid why-us__grid--{{ section.settings.columns_desktop }}">
      {%- for block in section.blocks -%}
        <div class="why-us__card" {{ block.shopify_attributes }}>
          <div class="why-us__icon">
            {%- case block.settings.icon_name -%}
              {%- when 'quality' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {%- when 'speed' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                </svg>
              {%- when 'support' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  <polyline points="9 12 11 14 15 10"/>
                </svg>
              {%- when 'stable' -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <line x1="9" y1="3" x2="9" y2="21"/>
                  <line x1="15" y1="3" x2="15" y2="21"/>
                  <line x1="3" y1="9" x2="21" y2="9"/>
                  <line x1="3" y1="15" x2="21" y2="15"/>
                </svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
            {%- endcase -%}
          </div>

          {%- if block.settings.title != blank -%}
            <h3 class="why-us__title h4">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <p class="why-us__description">{{ block.settings.description }}</p>
          {%- endif -%}

          {%- if block.settings.highlight != blank -%}
            <span class="why-us__highlight">{{ block.settings.highlight }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% stylesheet %}
  .why-us__header {
    text-align: center;
    max-width: 80rem;
    margin: 0 auto 3rem;
  }

  .why-us__heading {
    margin: 0 0 1rem;
  }

  .why-us__subheading {
    margin: 0;
    opacity: 0.8;
  }

  .why-us__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .why-us__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .why-us__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .why-us__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .why-us__card {
    padding: 2rem;
    text-align: center;
    border-radius: 12px;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .why-us__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }

  .why-us__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.05);
    color: rgb(var(--color-foreground));
  }

  .why-us__title {
    margin: 0 0 0.75rem;
  }

  .why-us__description {
    margin: 0;
    opacity: 0.7;
    line-height: 1.6;
  }

  .why-us__highlight {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    background: rgba(var(--color-foreground), 0.08);
    border-radius: 20px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Why us",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "De ce sa ne alegi pe noi?"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Avantajele de a lucra cu noi"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "advantage",
      "name": "Advantage",
      "settings": [
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Quality (Star)" },
            { "value": "speed", "label": "Speed (Lightning)" },
            { "value": "support", "label": "Support (Shield)" },
            { "value": "stable", "label": "Stability (Grid)" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Calitate Premium"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Cod curat, design modern si performanta de top pentru fiecare proiect."
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlight badge (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why us",
      "blocks": [
        {
          "type": "advantage",
          "settings": {
            "icon_name": "quality",
            "title": "Calitate Premium",
            "description": "Cod curat, design modern si performanta de top pentru fiecare proiect."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "icon_name": "support",
            "title": "Suport Dedicat",
            "description": "Echipa noastra este mereu disponibila sa te ajute cu orice problema."
          }
        },
        {
          "type": "advantage",
          "settings": {
            "icon_name": "stable",
            "title": "Stabilitate",
            "description": "Site-uri stabile si sigure, construite pe tehnologii moderne."
          }
        }
      ]
    }
  ]
}
{% endschema %}
