      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "advantage",
      "name": "Advantage",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Custom icon image"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Default icon (if no custom icon)",
          "options": [
            { "value": "quality", "label": "Quality (star)" },
            { "value": "stability", "label": "Stability (monitor)" },
            { "value": "support", "label": "Support (chat)" },
            { "value": "speed", "label": "Speed (lightning)" },
            { "value": "security", "label": "Security (shield)" },
            { "value": "custom", "label": "Custom (layout)" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Calitate"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Cod curat, design modern si performanta de top pentru fiecare proiect."
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlight tag (optional)",
          "info": "E.g., 'Next.js', 'Shopify Expert', '5+ ani experienta'"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why us",
      "blocks": [
        {
          "type": "advantage",
          "settings": {
            "icon_name": "quality",
            "title": "Calitate Premium",
            "description": "Cod curat, design modern si performanta de top pentru fiecare proiect.",
            "highlight": "100% Custom"
          }
        },
        {
          "type": "advantage",
          "settings": {
            "icon_name": "stability",
            "title": "Tehnologii Moderne",
            "description": "Folosim Next.js, Shopify si cele mai noi tehnologii pentru rezultate de durata.",
            "highlight": "Next.js & Shopify"
          }
        },
        {
          "type": "advantage",
          "settings": {
            "icon_name": "support",
            "title": "Mai Putine Batai de Cap",
            "description": "Serviciu complet: de la design la lansare si mentenanta. Tu te relaxezi.",
            "highlight": "Full Service"
          }
        }
      ]
    }
  ]
}
{% endschema %}
