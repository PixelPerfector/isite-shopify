<div class="portfolio-projects color-{{ section.settings.color_scheme }} gradient">
  <div class="portfolio-projects__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="portfolio-projects__header">
        <h2 class="portfolio-projects__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="portfolio-projects__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="portfolio-projects__grid portfolio-projects__grid--{{ section.settings.columns_desktop }}">
      {%- for block in section.blocks -%}
        <div class="portfolio-projects__card" {{ block.shopify_attributes }}>
          <div class="portfolio-projects__image-wrapper">
            {%- if block.settings.image != blank -%}
              {{- block.settings.image | image_url: width: 800 | image_tag:
                class: 'portfolio-projects__image',
                loading: 'lazy',
                sizes: '(min-width: 1200px) 380px, (min-width: 750px) 50vw, 100vw',
                widths: '300, 400, 500, 600, 700, 800'
              -}}
            {%- else -%}
              {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'portfolio-projects__image placeholder' }}
            {%- endif -%}

            {%- if block.settings.link != blank -%}
              <a
                href="{{ block.settings.link }}"
                class="portfolio-projects__link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="{{ block.settings.title }} - {{ 'general.view_live' | t | default: 'View live' }}"
              >
                <span class="portfolio-projects__link-text">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15 3 21 3 21 9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                  {{ 'general.view_live' | t | default: 'Vezi Live' }}
                </span>
              </a>
            {%- endif -%}
          </div>

          <div class="portfolio-projects__content">
            {%- if block.settings.niche != blank -%}
              <span class="portfolio-projects__niche">{{ block.settings.niche }}</span>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="portfolio-projects__title h4">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="portfolio-projects__description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="portfolio-projects__footer">
        <a href="{{ section.settings.button_link }}" class="button button--secondary">
          {{- section.settings.button_label -}}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% stylesheet %}
  .portfolio-projects__header {
    text-align: center;
    max-width: 80rem;
    margin: 0 auto 3rem;
  }

  .portfolio-projects__heading {
    margin: 0 0 1rem;
  }

  .portfolio-projects__subheading {
    margin: 0;
    opacity: 0.8;
  }

  .portfolio-projects__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .portfolio-projects__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .portfolio-projects__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .portfolio-projects__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .portfolio-projects__card {
    border-radius: 12px;
    overflow: hidden;
    background: rgba(var(--color-foreground), 0.02);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .portfolio-projects__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--color-foreground), 0.1);
  }

  .portfolio-projects__image-wrapper {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .portfolio-projects__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .portfolio-projects__card:hover .portfolio-projects__image {
    transform: scale(1.05);
  }

  .portfolio-projects__link {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: opacity 0.3s ease;
    text-decoration: none;
  }

  .portfolio-projects__card:hover .portfolio-projects__link {
    opacity: 1;
  }

  .portfolio-projects__link-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    font-weight: 600;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 6px;
    backdrop-filter: blur(4px);
    transition: background 0.2s ease;
  }

  .portfolio-projects__link:hover .portfolio-projects__link-text {
    background: rgba(255, 255, 255, 0.25);
  }

  .portfolio-projects__content {
    padding: 1.5rem;
  }

  .portfolio-projects__niche {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(var(--color-foreground));
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }

  .portfolio-projects__title {
    margin: 0 0 0.5rem;
  }

  .portfolio-projects__description {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.7;
    line-height: 1.5;
  }

  .portfolio-projects__footer {
    text-align: center;
    margin-top: 3rem;
  }
{% endstylesheet %}

