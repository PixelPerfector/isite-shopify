<div class="why-website color-{{ section.settings.color_scheme }} gradient">
  <div class="why-website__container page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="why-website__header">
        <h2 class="why-website__heading {{ section.settings.heading_size }}">
          {{- section.settings.heading -}}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="why-website__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="why-website__grid why-website__grid--{{ section.settings.columns_desktop }}">
      {%- for block in section.blocks -%}
        <div class="why-website__card" {{ block.shopify_attributes }}>
          <div class="why-website__image-wrapper">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 600 | image_tag: class: 'why-website__image', loading: 'lazy' }}
            {%- else -%}
              <div class="why-website__image-placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
          </div>

          <div class="why-website__card-content">
            {%- if block.settings.title != blank -%}
              <h3 class="why-website__card-title h4">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.description != blank -%}
              <p class="why-website__card-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% stylesheet %}
  .why-website__container {
    text-align: center;
  }

  .why-website__header {
    max-width: 80rem;
    margin: 0 auto 3rem;
  }

  .why-website__heading {
    margin: 0 0 1rem;
  }

  .why-website__subheading {
    margin: 0;
    font-size: 1.1rem;
    opacity: 0.8;
  }

  .why-website__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .why-website__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .why-website__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .why-website__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .why-website__card {
    background: rgba(var(--color-foreground), 0.03);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .why-website__card:hover {
    transform: translateY(-4px);
  }

  .why-website__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .why-website__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .why-website__image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-foreground), 0.05);
  }

  .why-website__image-placeholder .placeholder-svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .why-website__card-content {
    padding: 1.5rem;
  }

  .why-website__card-title {
    margin: 0 0 0.75rem;
  }

  .why-website__card-description {
    margin: 0;
    font-size: 0.95rem;
    opacity: 0.75;
    line-height: 1.6;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Why website",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "De ce ai nevoie de un website?"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Un site web profesional este fundatia succesului in mediul online"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Number of columns on desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Card",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sa fii vizibil pe Google"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Clientii te gasesc cand cauta serviciile tale online."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why website",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Sa fii vizibil pe Google",
            "description": "Clientii te gasesc cand cauta serviciile tale online."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Sa rulezi reclame YouTube",
            "description": "Promoveaza-ti afacerea prin video-uri catre milioane de utilizatori."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Sa vinzi online",
            "description": "Transforma vizitatorii in clienti platitori, non-stop."
          }
        }
      ]
    }
  ]
}
{% endschema %}
